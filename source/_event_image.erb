<% if event == 'youtube' %>
<div class="event-video">
  <div class="video-wrapper">
    <iframe width="420" height="315" src="https://www.youtube.com/embed/tUg5YmBXBWM?rel=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>
  </div>
</div>
<% else %>
<div class="event-image">
  <% image = info.image || lorem.image('400x400', text: "Coming Soon") %>
  <%= image_tag image, class: "img-rounded img-responsive" %>
</div>
<% end %>
