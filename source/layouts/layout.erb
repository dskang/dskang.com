<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <!-- Open Graph  -->
    <meta property="og:title" content="<%= current_page.data.title || "Dan Kang" %>" />
    <meta property="og:description" content="<%= current_page.data.description || "hi, i'm dk. sometimes i make stuff. sometimes i put it on the internet." %>" />
    <meta property="og:image" content="<%= full_url_for "images/og-image.jpg" %>" />

    <title><%= current_page.data.title || "Dan Kang" %></title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag "all" %>

    <link href="https://fonts.googleapis.com/css?family=Questrial" rel="stylesheet">

    <!-- Google Analytics -->
    <%= partial "analytics" if build? %>
  </head>

  <body>
    <div class="header">
      <h3 class="header-brand">Dan Kang</h3>
      <nav class="header-nav">
        <%= nav_link_to "Story", "/" %>
        <!-- <%= nav_link_to "Projects", "/projects" %> -->
        <%= nav_link_to "Writing", "http://dskang.tumblr.com/notable-posts" %>
      </nav>
    </div>
    <%= yield %>
  </body>
</html>
