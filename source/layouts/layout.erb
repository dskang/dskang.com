<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <!-- Open Graph  -->
    <% if current_page.data.title %>
      <meta property="og:title" content="<%= current_page.data.title %>" />
    <% end %>
    <% if current_page.data.description %>
      <meta property="og:description" content="<%= current_page.data.description %>" />
    <% end %>
    <% if current_page.data.image %>
      <meta property="og:image" content="<%= full_image_url_for current_page.data.image %>" />
    <% end %>

    <title><%= current_page.data.title || "Dan Kang" %></title>

    <%= stylesheet_link_tag "all" %>

    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    <%= javascript_include_tag "all" %>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Questrial|Droid+Sans+Mono" rel="stylesheet">

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="<%= image_path "favicon/apple-touch-icon.png" %>">
    <link rel="icon" type="image/png" href="<%= image_path "favicon/favicon-32x32.png" %>" sizes="32x32">
    <link rel="icon" type="image/png" href="<%= image_path "favicon/favicon-16x16.png" %>" sizes="16x16">
    <link rel="manifest" href="<%= image_path "favicon/manifest.json" %>">
    <link rel="mask-icon" href="<%= image_path "favicon/safari-pinned-tab.svg" %>" color="#5bbad5">
    <link rel="shortcut icon" href="<%= image_path "favicon/favicon.ico" %>">
    <meta name="msapplication-config" content="<%= image_path "favicon/browserconfig.xml" %>">
    <meta name="theme-color" content="#ffffff">

    <% if build? %>
      <!-- Google Analytics -->
      <%= partial "analytics" %>
    <% end %>
  </head>

  <body>
    <div id="site-header" class="header">
      <a class="header-brand" href="/">Dan Kang</a>
      <nav class="header-nav">
        <%= nav_link_to "Story", "/" %>
        <%= nav_link_to "Projects", "/projects" %>
        <%= nav_link_to "Writing", "/writing" %>
      </nav>
    </div>
    <div id="fixed-header">
      <div class="hidden-xs-down header">
        <a class="header-brand" href="/">Dan Kang</a>
        <nav class="header-nav">
          <%= nav_link_to "Story", "/" %>
          <%= nav_link_to "Projects", "/projects" %>
          <%= nav_link_to "Writing", "/writing" %>
        </nav>
      </div>
      <nav class="hidden-sm-up navbar navbar-toggleable navbar-light">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="/">Dan Kang</a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <%= nav_link_to "Story", "/", "nav-item nav-link" %>
            <%= nav_link_to "Projects", "/projects", "nav-item nav-link" %>
            <%= nav_link_to "Writing", "/writing", "nav-item nav-link" %>
          </ul>
        </div>
      </nav>
    </div>
    <%= yield %>
  </body>
</html>
