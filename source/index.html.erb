<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Timeline</h1>
      <p class="lead intro">
        Hi. This is a living timeline of events, both wonderful and terrible, that have profoundly influenced who I am.
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="logo">
        <%= image_tag "dk_logo.png", class: "img-responsive" %>
      </div>
    </div>
    <div class="row divider-row">
      <div class="col-md-12">
        <div class="event-divider"></div>
      </div>
    </div>
  </div>
  <% data.events.each do |event, info| %>
  <div class="row section">
    <div class="col-md-12">
      <div class="row divider-row">
        <div class="col-md-12">
          <div class="event-divider"></div>
        </div>
      </div>
      <div class="event">
        <div class="event-image">
          <%= image_tag lorem.image('200x200'), class: "img-circle img-responsive" %>
        </div>
        <div class="event-info">
          <h4><%= info.short %></h4>
          <%= info.age %> years old
          <br>
          <%= info.location %>
          <div class="event-description">
            <%= simple_format(info.description) %>
          </div>
        </div>
      </div>
      <div class="row divider-row">
        <div class="col-md-12">
          <div class="event-divider"></div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
