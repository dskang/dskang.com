<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <p class="lead intro">
        Hi, I'm DK. This is a living timeline of events, both wonderful and terrible, that have profoundly influenced who I am.
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="logo">
        <%= image_tag "dk_logo.png", class: "img-responsive" %>
      </div>
      <div class="event-divider"></div>
    </div>
  </div>
  <% data.events.each do |event, info| %>
  <div class="row section">
    <div class="col-md-12">
      <div class="event-divider"></div>
      <div class="row">
        <div class="col-lg-4 visible-lg-block">
          <div class="event-image">
            <% image = info.image || lorem.image('350x350') %>
            <%= image_tag image, class: "img-rounded" %>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="event">
            <div class="event-thumbnail">
              <% thumbnail = info.thumbnail || lorem.image('200x200') %>
              <%= image_tag thumbnail, class: "img-circle img-responsive" %>
            </div>
            <div class="event-info">
              <h4><%= info.short %></h4>
              <%= pluralize(info.age, "year") %> old
              <br>
              <%= info.location %>
            </div>
          </div>
        </div>
        <div class="col-lg-4 visible-lg-block">
        </div>
      </div>
      <div class="event-divider"></div>
    </div>
  </div>
  <% end %>
</div>
