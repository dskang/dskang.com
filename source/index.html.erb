<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Timeline</h1>
      <p class="lead intro">
        Hi. This is a living timeline of events, both wonderful and terrible, that have shaped me into who I am today.
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="logo">
        <%= image_tag "dk_logo.png", class: "img-responsive" %>
      </div>
    </div>
    <div class="row divider-row">
      <div class="col-md-12">
        <div class="event-divider"></div>
      </div>
    </div>
  </div>
  <% data.events.each do |event, info| %>
  <div class="row section">
    <div class="col-md-12">
      <div class="row divider-row">
        <div class="col-md-12">
          <div class="event-divider"></div>
        </div>
      </div>
      <div class="event">
        <div>
          <img src="<%= lorem.image('200x200') %>" class="img-circle">
        </div>
        <div class="event-info">
          <%= info.short %>
          <br>
          <%= info.age %> years old
          <br>
          <%= info.location %>
          <br>
          <%= info.description %>
        </div>
      </div>
      <div class="row divider-row">
        <div class="col-md-12">
          <div class="event-divider"></div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
